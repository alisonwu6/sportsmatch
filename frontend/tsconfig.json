/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "compilerOptions": {
    /* Enable React JSX transform */
    "jsx": "react-jsx",

    /* Set target environment */
    "target": "es2016",

    /* Module resolution */
    "module": "commonjs",

    /* Use `@/` as alias for `src/` */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Interop and type safety */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type checking */
    "strict": true,

    /* Skip checking .d.ts from node_modules */
    "skipLibCheck": true
  },

  /* Tell TS to include only files under src/ */
  "include": ["src"]
}
